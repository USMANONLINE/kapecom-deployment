doctype html
html(lang=en)
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title KAPECOM RESET PASSWORD
        link(rel="stylesheet" href="style.css")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous")
    body(class="text-center")
        form(class="form-signin" method="POST" action="/resetpassword")
            h1(class="h3 mb-3 font-weight-normal") RESET PASSWORD
            label(for="inputNewPassword" class="sr-only") New Password
            input(type="password" id="inputNewPassword" class="form-control" placeholder="New Password" required autofocus)
            label(for="inputConfirmPassword" class="sr-only") Confirm Password
            input(type="password" id="inputConfirmPassword" class="form-control" placeholder="Confirm Password" required)
            button(class="btn btn-lg btn-primary btn-block" type="submit") Reset Password
            p(class="mt-5 mb-3 text-muted") &copy; 2019-2020
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous")
